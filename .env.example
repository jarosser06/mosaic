# Database Configuration
POSTGRES_USER=mosaic
POSTGRES_PASSWORD=changeme
POSTGRES_DB=mosaic
DATABASE_URL=postgresql+asyncpg://mosaic:changeme@localhost:5433/mosaic

# APScheduler Configuration
APSCHEDULER_JOB_STORE_URL=postgresql+asyncpg://mosaic:changeme@localhost:5433/mosaic

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Notification Settings (using desktop-notifier)
NOTIFICATION_ENABLED=true
NOTIFICATION_SOUND=default

# Reminder Notification Settings
# Cooldown period between repeated notifications for same reminder (prevents spam)
# Default: 60 minutes. Range: 1-1440 minutes (24 hours max)
REMINDER_NOTIFICATION_COOLDOWN_MINUTES=60

# Automatically mark non-recurring reminders as completed after first notification
# Default: true. Set to false to keep all reminders active until manually completed
REMINDER_AUTO_COMPLETE_NON_RECURRING=true
